#! /bin/bash
TCCOMMAND=$1
. $TCROOT/etc/os-release
bool(){
  case $1 in
                0|f|F|false|n|N|no) return 1 ;;
                1|t|T|true|y|Y|yes) return 0 ;;
                *) return 1 ;;
        esac
}
tc_hostnamectl(){
	if [ "x$1" = "x" ]
	then
	echo "   Static hostname: `cat $TCROOT/etc/hostname`"
	echo "        Machine ID: `cat $TCROOT/etc/machine-id`"
	echo "  Operating System: $PRETTY_NAME"
	return
	else
		case $1 in
			set-hostname)
				echo $2 > $TCROOT/etc/hostname
				;;
			*)
				echo "Unknown operation $1"
				return 1
				;;
		esac
	fi
}
tc_localectl(){
	if [ "x$1" = "x" ]
	then
	echo "   System Locale: `cat $TCROOT/etc/locale.conf`"
	return
	else
		case $1 in 
			set-locale)
				echo $2 > $TCROOT/etc/locale.conf
				;;
			*)
				echo "Unknown operation $1"
				return 1
				;;
		esac
	fi
}
tc_timedatectl(){
true
}
shift
case $TCCOMMAND in
	hostnamectl)
		tc_hostnamectl $*
		;;
	localectl)
		tc_localectl $*
		;;
	*)
		echo "Supported simulation: hostnamectl localectl"
		exit 1
		;;
esac
